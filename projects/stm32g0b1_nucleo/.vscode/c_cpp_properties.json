    "version": 4,
    "configurations": [
        {
            /* ms-vscode.cmake-tools plugin shall to be installed, which provides include paths and defines through CMake file */
            "name": "STM32",
            "includePath": [],
            "defines": [],
            "compilerPath": "",
            "cStandard": "gnu17",
